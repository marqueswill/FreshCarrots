// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  cpf         String  @unique
  username    String  @unique
  name        String
  email       String  @unique
  phoneNumber String  @unique
  image       String?
  password    String
  college     String?
  course      String?
  title       String?
  score       Int     @default(0)
  isAdmin     Boolean @default(false)

  Review   Review[]
  UserBook UserBook[]
  Loan     Loan[]
}

model Book {
  isbn      String @unique
  title     String
  author    String
  edition   Int
  year      Int
  category  String @default("")
  grade     Int?
  pages     Int
  language  String
  sinopse   String
  thumbnail String

  Review   Review[]
  UserBook UserBook[]
}

model UserBook {
  id            Int     @id @default(autoincrement())
  condition     String
  forLoan     Boolean
  forTrade      Boolean
  avaliable     Boolean
  solicitations Int

  cpf  String
  isbn String

  user User   @relation(fields: [cpf], references: [cpf])
  book Book   @relation(fields: [isbn], references: [isbn])
  Loan Loan[]
}

model Loan {
  id    Int    @id @default(autoincrement())
  time  Int
  start String
  end   String

  lenderCpf      String?
  borrowerBookId Int
  // borrowerCpf Int? //is already on userBook

  BorrowerBook UserBook @relation(fields: [borrowerBookId], references: [id])
  Lender       User?    @relation(fields: [lenderCpf], references: [cpf])
}

model Review {
  idReview Int    @unique
  grade    Int
  comment  String

  bookIsbn String
  userCpf  String

  user User @relation(fields: [userCpf], references: [cpf])
  book Book @relation(fields: [bookIsbn], references: [isbn])
}
