// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  cpf         BigInt  @id @default(autoincrement())
  name        String
  image       String
  email       String  @unique
  phoneNumber String  @unique
  password    String
  college     String?
  title       String
  score       Int
  idAdmin     Boolean

  Review   Review[]
  UserBook UserBook[]
  Loan     Loan[]
}

model Book {
  isbn     String @id
  title    String
  author   String
  edition  Int
  year     Int
  category String @default("")
  grade    Int    @default(0)
  pages    Int
  language String
  sinopse  String

  Review   Review[]
  UserBook UserBook[]
}

model UserBook {
  id            BigInt  @id @default(autoincrement())
  condition     String
  forBorrow     Boolean
  forLending    Boolean
  avaliable     Boolean
  solicitations Int

  cpf  BigInt
  isbn String

  user User   @relation(fields: [cpf], references: [cpf])
  book Book   @relation(fields: [isbn], references: [isbn])
  Loan Loan[]
}

model Loan {
  id    Int    @id @default(autoincrement())
  time  Int
  start String
  end   String

  lenderCpf      BigInt?
  borrowerBookId BigInt
  // borrowerCpf BigInt? //is already on userBook

  BorrowerBook UserBook @relation(fields: [borrowerBookId], references: [id])
  Lender       User?    @relation(fields: [lenderCpf], references: [cpf])
}

model Review {
  idReview Int    @id
  grade    Int
  comment  String

  bookIsbn String
  userCpf  BigInt

  user User @relation(fields: [userCpf], references: [cpf])
  book Book @relation(fields: [bookIsbn], references: [isbn])
}
